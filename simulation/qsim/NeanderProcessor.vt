input sampler_rx;

reg [7:0] ac_expected;

reg [7:0] ac_prev;

reg [7:0] ac_expected_prev;

reg [7:0] last_ac_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:1] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 1'b1;
end

// update real /o prevs

always @(trigger)
begin
	ac_prev = ac;
end

// update expected /o prevs

always @(trigger)
begin
	ac_expected_prev = ac_expected;
end


// expected ac[ 7 ]
initial
begin
